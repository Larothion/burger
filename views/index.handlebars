
<h1>Burgers</h1>

<h2></h2>

<ul>
  {{#each burgerstable}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">DEVOUR!</button>
        </form>
      </li>
  {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>
  <button type="submit">Create Burger</button>
</form>

